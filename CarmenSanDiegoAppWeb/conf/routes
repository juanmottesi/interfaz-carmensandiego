# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# LIBROS
GET 	/iniciar					controllers.Application.iniciarJuego()
GET 	/ordendearresto				controllers.Application.getOrdenDeArresto()
GET		/paisactual					controllers.Application.getPaisAcutal()
GET		/ordendearresto/:villano	controllers.Application.ordenDeArresto(villano:String)
GET		/viajar/:pais				controllers.Application.viajar(pais:String)
GET		/final						controllers.Application.fin()
GET		/expedientes				controllers.Application.getExpedientes()
GET		/pista/:lugar				controllers.Application.getPistas(lugar:String)

  	

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
