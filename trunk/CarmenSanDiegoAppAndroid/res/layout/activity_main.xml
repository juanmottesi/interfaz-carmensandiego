<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/titulo_viajar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/viajar" />
    
    <Spinner 
        android:id="@+id/lista_paises"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />
    
    <TextView
        android:id="@+id/titulo_lista_correctos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_lista_correcto" />
    
    <!--  Falta lo que tome la lista correctos -->
    
    <TextView
        android:id="@+id/titulo_lista_incorrectos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_lista_incorrecto" />
    
    <!--  Falta lo que tome la lista incorrectos -->
    
    

</LinearLayout>
